<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingTop="30dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"/>
                    <ImageView
                        android:src="@drawable/pen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/nickname_ins"
                        android:hint="닉네임"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <EditText
                        android:id="@+id/age_ins"
                        android:hint="나이"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/university_ins"
                        android:hint="학교"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/major_ins"
                        android:hint="학과"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:text="모임 인원"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ToggleButton
                        android:id="@+id/btn_22"
                        android:textOn="2 : 2"
                        android:textOff="2 : 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ToggleButton
                        android:id="@+id/btn_33"
                        android:textOn="3 : 3"
                        android:textOff="3 : 3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ToggleButton
                        android:id="@+id/btn_44"
                        android:textOn="4 : 4이상"
                        android:textOff="4 : 4이상"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:text="모임 지역"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ToggleButton
                            android:id="@+id/btn_gn"
                            android:textOn="강남"
                            android:textOff="강남"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_sc"
                            android:textOn="신촌"
                            android:textOff="신촌"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_aa"
                            android:textOn="안암"
                            android:textOff="안암"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ToggleButton
                            android:id="@+id/btn_jr"
                            android:textOn="종로"
                            android:textOff="종로"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_hd"
                            android:textOn="홍대"
                            android:textOff="홍대"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_js"
                            android:textOn="잠실"
                            android:textOff="잠실"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ToggleButton
                            android:id="@+id/btn_itw"
                            android:textOn="이태원"
                            android:textOff="이태원"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_edit"
                            android:textOn="직접 입력"
                            android:textOff="직접 입력"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ToggleButton
                            android:id="@+id/btn_dc"
                            android:textOn="상관 없음"
                            android:textOff="상관 없음"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>